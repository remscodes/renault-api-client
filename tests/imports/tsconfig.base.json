{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "Node",
    "declaration": false,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "./**"
  ]
}
